doctype html
html(ng-app='getBookin')
  head
    title= title

    // ---- Bootstrap & Plugins ----
    link(rel='stylesheet', href='/libraries/bootstrap/css/bootstrap.min.css', type='text/css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', type='text/css')

    //link(rel='stylesheet', href='/stylesheets/global.css', type='text/css')

    // ---- AngularJS & Plugins ----
    script(src='http://code.angularjs.org/1.3.0-beta.4/angular.min.js')
    script(src='http://code.angularjs.org/1.3.0-beta.4/angular-cookies.min.js')
    script(src='http://code.angularjs.org/1.3.0-beta.4/angular-sanitize.min.js')
    //script(src='http://code.angularjs.org/1.2.4/angular-route.min.js')

    // ---- jQuery & Plugins ----
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')

    script(src='/javascripts/global.js')

    block additionalCss

  body

    div(id='error-msg-container', class='alert alert-danger')
      button(type='button', class='close', aria-hidden='true')&times;
      | {{errorMsg}}

    div(id='msg-container', class='alert alert-info')
      button(type='button', class='close', aria-hidden='true')&times;
      span(ng-bind-html='msg')

    // -------- [START] Navbar --------
    nav(class='navbar navbar-default navbar-fixed-top', role='navigation')
      .navbar-header
      a.navbar-brand(href='/pages/adminSchedule')
        img(src='/images/logo.png', alt='LOGO')
      #main-navbar(class='collapse navbar-collapse')
        ul(class='nav navbar-nav')
          li
            a(href='/pages/adminSchedule', ng-class="{'active' : currentPage == '/pages/adminSchedule'}") COURT SCHEDULE
          //li
          //  a(href='/') SETTINGS
        ul(class='nav navbar-nav navbar-right login-status-container')
          div(ng-if='user != null')
            strong {{user.email}}&nbsp;
            logoutbtn
    // -------- [END] Navbar --------

    block mainContainer


    // ---- Bootstrap & Plugins ----
    script(src='http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js')

    script(src='/config.js')

    // ---- Classes ----
    script(src='/javascripts/class/map.js')

    // ---- Additional Libraries ----
    script(src='/libraries/moment/moment.min.js')

    script(src='/javascripts/directives/logoutBtn.js')

    block additionalJs

