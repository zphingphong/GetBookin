body
  height 100%
  margin 0
  padding 50px 15px 0 15px
  background-image url("/images/bodybg.png")

section
  width 100%
  margin 0 auto

address
  margin 0
  display inline



/******************************** [START] Definitions ***********************************/
color-orange = #ED9C28
color-grey = #999999
color-blue = #2381ce
color-green = #47a447
/******************************** [END] Definitions ***********************************/



/******************************** [START] Bootstrap Override ***********************************/
.modal-footer
  margin-top 0


.navbar-brand
  padding 4px 15px
/******************************** [END] Bootstrap Override ***********************************/



/******************************** [START] Generic styles ***********************************/
.text-orange
  color color-orange

.text-blue
  color color-blue

.text-green
  color color-green

.text-black
  color black

.right 
  float right


.pad-small 
  padding 0.5em


.pad-medium 
  padding 1em

.pad-left-right-medium
  padding 0 1em

.pad-bottom-small 
  padding-bottom 0.5em


.pad-top-bottom-small
  padding-top 0.5em
  padding-bottom 0.5em

.no-margin
  margin 0

.margin-top-bottom-small
  margin-top 0.5em
  margin-bottom 0.5em

.section-spaced 
  padding-top 70px

.full-width 
  width 100%

.capitalize
  text-transform capitalize

/******************************** [END] Generic styles ***********************************/



/******************************** [START] Navbar ***********************************/
nav
  padding 0 0 0 0.5em

#main-navbar-signinwith
  background-color color-orange
  color white
  padding 0 15px
  button
    padding 2px 6px
    font-size 20px
    min-width 36px
    margin-left 4px


/******************************** [END] Navbar ***********************************/

#location-map 
  height 500px


#location-selection-container a:hover
  text-decoration none


/******************************** [START] Court availability table ***********************************/
#time-court-selection-table td
  padding 0

#time-court-selection-table td button
  width 100%
  border-radius 0

#time-court-selection-table td.court-selection-label
  vertical-align middle

#time-court-selection-table th
  text-align center





/******************************** [END] Court availability table ***********************************/
